@model IEnumerable<Diplom.Question>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Test)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Test.TestName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.QuestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.QuestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.QuestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
