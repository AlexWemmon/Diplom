@model Diplom.Question


@{Layout = "_LayoutAdmin";}
<h1>Редактирование</h1>

<h4>@Model.QuestText</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestId" />
            <div class="form-group">
                <label asp-for="QuestText" class="control-label"></label>
                <input asp-for="QuestText" class="form-control" />
                <span asp-validation-for="QuestText" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="QuestScore" class="control-label"></label>
                <input asp-for="QuestScore" class="form-control" />
                <span asp-validation-for="QuestScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllQuestions">К списку вопросов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
