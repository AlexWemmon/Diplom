@model IEnumerable<Diplom.Student>

@{
    ViewData["Title"] = "Актуальный список студентов";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassWord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassWord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Course)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item">Edit</a> |
                <a asp-action="Details" asp-route-id="@item">Details</a> |
                <a asp-action="Delete" asp-route-id="@item">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
