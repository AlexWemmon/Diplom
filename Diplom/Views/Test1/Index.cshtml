@model IEnumerable<Diplom.Test1>

@{
    ViewData["Title"] = "Index";

}
<h1>Список тестов</h1>

<p>
    <a asp-action="Create">Добавить тест</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TestName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestDate)
            </td>
            <td>
                
                <a asp-action="Edit" asp-route-id="@item.TestId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.TestId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.TestId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
